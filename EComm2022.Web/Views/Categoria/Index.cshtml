@model List<EComm2022.Entidades.Entidades.Categoria>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb mt-4 mb-4 ">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Dashboard</a></li>
    <li class="breadcrumb-item active">Categorías</li>
</ol>
<div class="card">
    <h5 class="card-header bg-primary text-white">
        <i class="fas fa-bookmark"></i>
        Listado de Categorías

    </h5>
    <div class="card-body">
        <a href="@Url.Action("Create","Categoria")" class="btn btn-primary">Crear Nueva</a>
        <hr/>
        <table class="table">
            <thead>
            <tr>
                <th>Categoría</th>
                <th>Activo</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td>
                        No hay registros todavía
                    </td>
                </tr>
            }
            else
            {
                foreach (var categoria in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem=>categoria.Descripcion)</td>
                        <td>@Html.DisplayFor(modelItem=>categoria.Activa)</td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new{id=categoria.CategoriaId}, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Borrar", "#", null, new { @class = "btn btn-danger" })

                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>

    </div>
    <div class="card-footer text-muted">
        Cantidad de registros: <strong>@Model.Count</strong> 
    </div>
</div>

